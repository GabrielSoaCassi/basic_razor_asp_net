@page
@model RazorPagesCursoUdemy.Pages.Filmes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="FilmeGender" asp-items="@Model.Genders">
            <option value="">Todos</option>
        </select>
        Search Filme : <input type="text" asp-for="SearchTerm" />
        <input type="submit" value="search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].LaunchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Filme)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaunchDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
